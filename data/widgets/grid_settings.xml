<gui>
<window id="grid_settings" text="@.title">
  <grid columns="4">

    <label text="@.type" for="grid_type" />
    <combobox id="grid_type" cell_hspan="3">
      <listitem text="@.type_rectangular" value="0" />
      <listitem text="@.type_isometric" value="1" />
    </combobox>

    <label text="@.x" for="grid_x" />
    <expr id="grid_x" text="" magnet="true" />

    <label text="@.y" for="grid_y" />
    <expr id="grid_y" text="" />

    <label text="@.width" for="grid_w" />
    <expr id="grid_w" text="" />

    <label text="@.height" for="grid_h" />
    <expr id="grid_h" text="" />

    <label text="@.color" for="grid_color" />
    <colorpicker id="grid_color" cell_hspan="3" />

    <label text="@.opacity" for="grid_opacity" />
    <slider id="grid_opacity" min="1" max="255" width="80" />
    <check id="grid_auto_opacity" text="@.auto_opacity" cell_hspan="2" />

    <label id="vertical_opacity_label" text="@.vertical_opacity" for="vertical_opacity" />
    <slider id="vertical_opacity" min="0" max="255" width="80" cell_hspan="3" />

    <separator horizontal="true" cell_hspan="4" />

    <box horizontal="true" homogeneous="true" cell_hspan="4" cell_align="right">
      <button text="@general.ok" closewindow="true" id="ok" magnet="true" minwidth="60" />
      <button text="@general.cancel" closewindow="true" />
    </box>
  </grid>
</window>
</gui>
